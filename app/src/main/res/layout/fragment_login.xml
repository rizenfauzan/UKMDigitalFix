<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    android:id="@+id/fragmentLogin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_width="254dp"
            android:layout_height="75dp"
            android:src="@drawable/logoukm" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorBlue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Silahkan Login"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/bentuk_kotak_border_biru_kecil">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ikon_pesan"
                    android:paddingTop="12.5dp"
                    android:paddingBottom="12.5dp"
                    app:tint="@color/grey_muda" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/grey_muda"
                    android:textSize="11sp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:paddingEnd="11dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bentuk_kotak_elips_putih_kecil"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bentuk_kotak_border_biru_kecil">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ikon_password"
                    android:paddingTop="12.5dp"
                    android:paddingBottom="12.5dp"
                    app:tint="@color/grey_muda" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/grey_muda"
                    android:textSize="11sp"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:paddingEnd="11dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bentuk_kotak_elips_putih_kecil"/>

            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Login"
                android:backgroundTint="#34a1eb"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"/>

            <CheckBox
                android:id="@+id/chkIngat"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingat saya ?"
                android:buttonTint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum punya akun ?"
                    android:textSize="@dimen/_10ssp"/>

                <TextView
                    android:id="@+id/tv_lupaPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lupa password"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_70sdp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>