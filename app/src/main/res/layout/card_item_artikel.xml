<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_4sdp"


    android:id="@+id/card_artikel"
    android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/foto_artikel"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:scaleType="centerCrop"
                android:background="@color/white_smoke"
                app:riv_corner_radius="@dimen/_7sdp"
                app:riv_mutate_background="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marketing"/>
                <TextView
                    android:id="@+id/txt_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "/>
                <TextView
                    android:id="@+id/txt_penulis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fadhilah Gatya Putri"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips UMKM Bersikap Terbuka Akan Kritik dan Masukan Konsumen"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
        </LinearLayout>




</androidx.cardview.widget.CardView>